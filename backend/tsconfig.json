{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "commonjs",
    "rootDir": "",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  }
}